<script>
    let courses = []
    let lastIndex = 0, startIndex = 0
    getCourses()

    async function getCourses() {
        let response = await fetch('/api/get-courses', {
            headers: { 'Content-Type': 'application/json' },
            credentials: 'include',
            method: 'GET',
        });

        let result = await response.json();
        courses = result
        //console.log(courses)
    }

    function changeSort(e) {
        let sort = e.value
        if (sort == 'Default sorting') {
            courses.sort((a, b) => { return a.ID - b.ID })
        } else if (sort == 'Price: Lower') {
            courses.sort((a, b) => { return b.Price - a.Price })
        } else if (sort == 'Price: Higher') {
            courses.sort((a, b) => { return a.Price - b.Price })
        } else {
            courses.sort((a, b) => { return a.Rating - b.Rating })
        }
        console.log(courses)
        pageClick(1)
    }

    function pageClick(page) {
        for (let i = 0; i < @ViewBag.pages; i++) {
            if (i == page-1)
                document.getElementsByClassName('number_page')[i].className = 'number_page active'
            else
                document.getElementsByClassName('number_page')[i].className = 'number_page'
        }       

        let lastIndex = page * 9
        let startIndex = lastIndex - 9
        let coursesInPage = courses.slice(startIndex, lastIndex)

        console.log(coursesInPage)

        for (let i; i < 10; i++) {
            document.getElementsByClassName('product product__style--3 col-lg-4 col-md-4 col-sm-6 col-12')[i].style.display = 'none'
        }

        coursesInPage.map((item, i) => {
            document.getElementsByClassName('product product__style--3 col-lg-4 col-md-4 col-sm-6 col-12')[i].style.display = 'block'
            document.getElementsByClassName('grid product-img')[i].src = item.Photo
            document.getElementsByClassName('grid product-name')[i].textContent = item.Name
            document.getElementsByClassName('grid product-price')[i].textContent = '$' + item.Price + '.00'
            document.getElementsByClassName('grid product-old-price')[i].textContent = '$' + (item.Price + Math.floor(Math.random() * 10) + 5) + '.00'
            document.getElementsByClassName('grid first__img')[i].href = '/user/course-detail/' + item.ID
            for (let k = 0; k < 5; k++) {
                if (k < item.Rating)
                    document.getElementsByClassName('grid product-rate-star')[k].className = 'grid product-rate-star on'
                else
                    document.getElementsByClassName('grid product-rate-star')[k].className = 'grid product-rate-star'
            }
        })
    }
</script>