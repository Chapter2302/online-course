<script>
    for (let i = 0; i <@ViewBag.course.Rating; i++) {
        document.getElementsByClassName("rate")[i].className = "rate on"
    }



    function addToCartClick(id, name, price, photo) {
        let coursesInCart = []
        if (localStorage.getItem('cart'))
            coursesInCart = JSON.parse(localStorage.getItem('cart'))
        console.log(id, name, price)
        let course = {
            ID: id,
            Price: price,
            Name: name,
            Photo: photo
        }

        if (coursesInCart.some(c => c.ID == course.ID) == false) {
            coursesInCart.push(course)
            localStorage.setItem('cart', JSON.stringify(coursesInCart))
            loadMiniCart()
            alert("Add to cart successfully!")
        }
        else {
            alert("You has selected this course!")
        }    
    }
</script>
