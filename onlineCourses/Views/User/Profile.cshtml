@{
    if (ViewBag.user == null)
    {
        <script>alert("Error! Try Again!")</script>
    }
}
<!-- Start Bradcaump area -->
<div class="ht__bradcaump__area bg-image--4">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="bradcaump__inner text-center">
                    <h2 class="bradcaump-title">Your Profile</h2>
                    <nav class="bradcaump-content">
                        <a class="breadcrumb_item" href="index.html">Home</a>
                        <span class="brd-separetor">/</span>
                        <span class="breadcrumb_item active">Your Profile</span>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Bradcaump area -->
<!-- Start My Account Area -->
<section class="my_account_area pt--80 pb--55 bg--white">
    <div class="container">
        <div class="row" style="display: flex; justify-content: center;">
            <div class="my__account__wrapper col-lg-11">
                <form method="post" action="@Url.Action("update-profile", "user")" enctype="multipart/form-data">
                    <h3 class="account__title">Your Profile</h3>
                    <div class="account__form">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="row" style="height: 225px; display: flex; justify-content: center">
                                    @{
                                        if (@ViewBag.user.Photo == null)
                                        {
                                            <img id="photo" style="height: 100%; width: 40%" src="/Resources/images/product/1.jpg" />
                                        }
                                        else
                                        {
                                            <img id="photo" style="height: 100%; width: 40%" src="@ViewBag.user.Photo" />
                                        }
                                    }
                                </div>
                                <div style="display: flex; justify-content: center; text-align: center">
                                    <input name="photo" type="file" onchange="uploadImg(event)" style="display: block; margin: 10px 0px;">
                                </div>
                                <div class="input__box">
                                    <label>Username<span>*</span></label>
                                    <input id="username" name="username" type="text" value="@ViewBag.user.Username">
                                    <input style="display: none" name="id" type="text" value="@ViewBag.user.ID">
                                </div>
                                <div class="input__box">
                                    <label>Password<span>*</span></label>
                                    <input id="pwd" name="pwd" type="password" placeholder="Input your new Password" required>
                                </div>
                                <div class="input__box">
                                    <label>Email<span>*</span></label>
                                    <input type="text" name="email" value="@ViewBag.user.Email">
                                </div>
                                <div class="input__box">
                                    <label>Gender<span>*</span></label>
                                    <select class="select__option" id="gender" name="gender">
                                        <option>Male</option>
                                        <option>Female</option>
                                    </select>
                                </div>
                                <div class="row" name="birthday">
                                    <div class="col-lg-4">
                                        <div class="input__box">
                                            <label>Day<span>*</span></label>
                                            <input id="day" name="day" class="input-text qty" min="1" max="31" value="@ViewBag.user.Birthday.Day" title="Qty" type="number">
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="input__box">
                                            <label>Month <span>*</span></label>
                                            <select class="select__option" name="month">
                                                <option value="none" selected disabled hidden>
                                                    @ViewBag.user.Birthday.Month
                                                </option>
                                                <option value="1">1</option>
                                                <option value="2">2</option>
                                                <option value="3">3</option>
                                                <option value="4">4</option>
                                                <option value="5">5</option>
                                                <option value="6">6</option>
                                                <option value="7">7</option>
                                                <option value="8">8</option>
                                                <option value="9">9</option>
                                                <option value="10">10</option>
                                                <option value="11">11</option>
                                                <option value="12">12</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="input__box">
                                            <label>Year <span>*</span></label>
                                            <input id="year" class="input-text qty" name="year" min="1930" max="2010" value="@ViewBag.user.Birthday.Year" title="Qty" type="number">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="input__box">
                                    <label>Address <span>*</span></label>
                                    <input type="text" name="address" value="@ViewBag.user.Address">
                                </div>
                                <div class="input__box">
                                    <label>City<span>*</span></label>
                                    <input type="text" name="region" value="@ViewBag.user.Region">
                                </div>
                                <div class="input__box">
                                    <label>Country<span>*</span></label>
                                    <input type="text" name="country" value="@ViewBag.user.Country">
                                </div>
                                <div class="input__box">
                                    <label>School<span>*</span></label>
                                    <input name="school" type="text" value="@ViewBag.user.School">
                                </div>
                                <div class="input__box">
                                    <label>BankID<span>*</span></label>
                                    <input type="text" name="bankid" value="@ViewBag.user.BankID">
                                </div>
                                <div class="input__box">
                                    <label>Your Bio</label>
                                    <textarea class="col-12" style="height: 130px; border: 1px solid #e1e1e1" id="bio" name="bio">@ViewBag.user.Bio</textarea>
                                </div>
                            </div>
                            <div class="form__btn col-12">
                                <button type="submit">Update Your Profile</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
<!-- End My Account Area -->
<script>
    function uploadImg(event) {
        let selectedFile = event.target.files[0]
        let reader = new FileReader()

        let photo = document.getElementById('photo')

        reader.onload = function (event) {
            photo.src = event.target.result
        }

        reader.readAsDataURL(selectedFile)
    }
</script>


